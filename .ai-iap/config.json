      "description": "Dart and Flutter standards",
      "files": ["architecture", "code-style"],
      "frameworks": {
        "flutter": {
          "name": "Flutter",
          "file": "flutter",
          "category": "UI Framework",
          "description": "Cross-platform UI framework",
          "recommended": true,
          "structures": {
            "feature": {
              "name": "Feature-First",
              "file": "flutter-feature",
              "description": "Organized by feature/module",
              "recommended": true
            },
            "layer": {
              "name": "Layer-First",
              "file": "flutter-layer",
              "description": "Organized by technical layer"
            },
            "clean": {
              "name": "Clean Architecture",
              "file": "flutter-clean",
              "description": "Domain-centric with strict boundaries"
            }
          }
        },
        "bloc": {
          "name": "BLoC",
          "file": "bloc",
          "category": "State Management",
          "description": "Business Logic Component pattern (use with Flutter)",
          "recommended": true,
          "requires": ["flutter"]
