{
  "version": "1.0.0",
  "tools": {
    "cursor": {
      "name": "Cursor",
      "outputDir": ".cursor/rules",
      "fileExtension": ".mdc",
      "useFrontmatter": true,
      "supportsGlobs": true,
      "supportsSubfolders": true,
      "recommended": true
    },
    "claude-cli": {
      "name": "Claude CLI",
      "outputFile": "CLAUDE.md",
      "fileExtension": ".md",
      "useFrontmatter": false,
      "concatenate": true,
      "recommended": true
    },
    "github-copilot": {
      "name": "GitHub Copilot",
      "outputFile": ".github/copilot-instructions.md",
      "fileExtension": ".md",
      "useFrontmatter": false,
      "concatenate": true
    },
    "windsurf": {
      "name": "Windsurf",
      "outputFile": ".windsurfrules",
      "fileExtension": "",
      "useFrontmatter": false,
      "concatenate": true
    },
    "aider": {
      "name": "Aider",
      "outputFile": "CONVENTIONS.md",
      "fileExtension": ".md",
      "useFrontmatter": false,
      "concatenate": true
    }
  },
  "languages": {
    "general": {
      "name": "General",
      "globs": "*",
      "alwaysApply": true,
      "description": "General coding standards",
      "files": ["persona", "architecture", "code-style"]
    },
    "dart": {
      "name": "Dart/Flutter",
